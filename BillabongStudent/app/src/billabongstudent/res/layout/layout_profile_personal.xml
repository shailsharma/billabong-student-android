<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_16dp">

            <!--Aadhaar-->
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutAadhaarNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="49"
                    android:text="@string/labelAadhaarNumber"
                    android:textColor="@android:color/black" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/labelColon"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewAadhaarNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_weight="49"
                    android:textColor="@android:color/black"
                    tools:text="1243-5678-9867-3456" />

            </android.support.v7.widget.LinearLayoutCompat>

            <!--Class Group-->
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutClassGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="49"
                    android:text="@string/labelClassGroup"
                    android:textColor="@android:color/black" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/labelColon"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewClassGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_weight="49"
                    android:textColor="@android:color/black"
                    tools:text="Group-V-C" />

            </android.support.v7.widget.LinearLayoutCompat>

            <!--Enrollment Code-->
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutEnrollmentCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="49"
                    android:text="@string/labelEnrollmentCode"
                    android:textColor="@android:color/black" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/labelColon"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewEnrollmentCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_weight="49"
                    android:textColor="@android:color/black"
                    tools:text="1505580141" />

            </android.support.v7.widget.LinearLayoutCompat>

            <!--Date Of Birth-->
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="49"
                    android:text="@string/labelDateOfBirth"
                    android:textColor="@android:color/black" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/labelColon"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewDateOfBirth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_weight="49"
                    android:textColor="@android:color/black"
                    tools:text="26 Mar 2008" />

            </android.support.v7.widget.LinearLayoutCompat>

            <!--Blood Group-->
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutBloodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="49"
                    android:text="@string/labelBloodGroup"
                    android:textColor="@android:color/black" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/labelColon"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewBloodGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_weight="49"
                    android:textColor="@android:color/black"
                    tools:text="B +ve" />

            </android.support.v7.widget.LinearLayoutCompat>

            <!--Divider-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:background="@color/itemDivider" />

            <!--Address-->
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="49"
                    android:text="@string/labelAddress"
                    android:textColor="@android:color/black" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/labelColon"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_weight="49"
                    android:textColor="@android:color/black"
                    tools:text="SHRADDHA ROW HOUSE NO 2, ASHA NAGAR, THAKUR COMPLEX, KANDIVALI (EAST)" />

            </android.support.v7.widget.LinearLayoutCompat>

            <!--Divider-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:background="@color/itemDivider" />

            <!--Interest-->
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutInterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="49"
                    android:text="@string/labelInterest"
                    android:textColor="@android:color/black" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/labelColon"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewInterest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_weight="49"
                    android:textColor="@android:color/black"
                    tools:text="Reading, Writing, Drawing" />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

</layout>