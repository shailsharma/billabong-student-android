<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Notifications"
                android:textColor="@color/colorAccentSettings"
                android:textStyle="bold"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/notification_sound_enable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:background="?attr/selectableItemBackground"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Sound"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#CFD8DC"></View>

            <LinearLayout
                android:id="@+id/notification_sound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Choose notification tone"
                    android:textColor="#000000"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/notification_default_sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="default name"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#90A4AE"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#CFD8DC"></View>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/notification_Courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:background="?attr/selectableItemBackground"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Courses"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#CFD8DC"
                android:visibility="gone"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/notification_learning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:background="?attr/selectableItemBackground"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/title_network"/>

            <View
                android:id="@+id/viewAboveAssignment"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#CFD8DC"
                android:visibility="gone"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/notification_assignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:background="?attr/selectableItemBackground"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone"
                android:text="Homework Reminder"/>


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/notification_vib_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:background="?attr/selectableItemBackground"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="vibrate"
                android:visibility="gone"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Personalize"
                android:textColor="@color/colorAccentSettings"
                android:textStyle="bold"
                android:visibility="gone"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Data Sync"
                android:textColor="@color/colorAccentSettings"
                android:visibility="gone"
                android:textStyle="bold"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/sync_wifi_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="32dp"
                android:paddingBottom="16dp"
                android:visibility="gone"
                android:text="Download courses only on WiFi"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:background="#CFD8DC"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/sync_media_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:background="?attr/selectableItemBackground"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Auto download learning network media"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#CFD8DC"
                android:visibility="gone"></View>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/sync_queue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:text="Sync queue"
                android:textColor="#000000"
                android:visibility="gone"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/sync_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:text="Sync now"
                android:textColor="#000000"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/viewASH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/labelAddShortcut"
                android:textColor="@color/colorAccentSettings"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/layoutAddShortcut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/assignmentShortcut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="vertical"
                    >

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/homework"
                        android:textColor="#000000"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="#CFD8DC"></View>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/learningNetworkShortcut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="vertical">

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/title_network"
                        android:textColor="#000000"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="#CFD8DC"></View>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/calendarShortcut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/string_calendar"
                        android:textColor="#000000"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="#CFD8DC"></View>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/workspaceShortcut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/label_workspace"
                        android:textColor="#000000"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="#CFD8DC"></View>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/trainingShortcut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/labelTraining"
                        android:textColor="#000000"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/learningMapShortcut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/string_nav_learning_map"
                        android:textColor="#000000"
                        />

                </LinearLayout>


            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="History and privacy"
                android:textColor="@color/colorAccentSettings"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/clear_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Clear search history"
                    android:textColor="#000000"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Clear searches made on this device"
                    android:textColor="#90A4AE"/>

            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="General"
                android:textColor="@color/colorAccentSettings"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/general_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="App version"
                    android:textColor="#000000"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/general_default_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Default version"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#90A4AE"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#CFD8DC"></View>

            <LinearLayout
                android:id="@+id/general_Language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Language"
                    android:textColor="#000000"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/general_default_Language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Default language"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#90A4AE"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#CFD8DC"
                android:visibility="gone"></View>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/general_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:text="Help"
                android:textColor="#000000"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#CFD8DC"
                android:visibility="gone"></View>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/general_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:text="About"
                android:textColor="#000000"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#CFD8DC"
                android:visibility="gone"></View>

            <LinearLayout
                android:id="@+id/changePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/labelChangePassword"
                    android:textColor="#000000"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/labelChangePasswordDesc"
                    android:textColor="#90A4AE"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#CFD8DC"
                android:visibility="gone"></View>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/general_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:text="Log out"
                android:textColor="#000000"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>
</layout>