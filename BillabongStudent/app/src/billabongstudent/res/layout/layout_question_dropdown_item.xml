<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextDropdown"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/dropdown_white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:minWidth="72dp"
            android:paddingStart="@dimen/value_8dp"
            android:paddingEnd="@dimen/value_4dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize_22sp"
            android:textStyle="bold"
            android:theme="@style/EditTextThemeWhite"
            tools:text="Ahmedabad" />

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/textViewText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/value_4dp"
            android:layout_marginEnd="@dimen/value_4dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize_22sp"
            tools:text="is largest city of Gujrat." />

    </FrameLayout>
</layout>
