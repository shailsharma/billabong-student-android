<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <in.securelearning.lil.android.base.widget.TextViewCustom
            android:id="@+id/textview_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorGreyDark"
            android:textSize="17sp" />

        <in.securelearning.lil.android.base.widget.TextViewCustom
            android:id="@+id/question_list_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/question_list_item_delete"
            android:layout_toRightOf="@id/textview_question_number"
            android:textColor="@color/colorGreyDark"
            android:textSize="17sp" />

        <in.securelearning.lil.android.base.widget.CustomImageButton
            android:id="@+id/question_list_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:src="@drawable/remove" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_separator_grey" />

</LinearLayout>

