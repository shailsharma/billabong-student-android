<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="24dp"
        app:cardElevation="@dimen/elevation_4dp"
        app:cardUseCompatPadding="true">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Title-->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:lines="2"
                android:paddingStart="@dimen/padding_12dp"
                android:paddingTop="@dimen/padding_8dp"
                android:paddingEnd="@dimen/padding_8dp"
                android:paddingBottom="@dimen/padding_4dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                tools:text="Natural Methods of Vegetative Propagation by Animals and Humans on the Earth" />

            <!--Background Image-->

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imageViewBackground"
                    android:layout_width="208dp"
                    android:layout_height="108dp"
                    android:layout_gravity="center"
                    android:paddingEnd="@dimen/margin_8dp"
                    android:paddingStart="@dimen/margin_8dp"
                    tools:srcCompat="@drawable/image_placeholder" />


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--Type-->
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingStart="@dimen/padding_12dp"
                    android:paddingTop="@dimen/padding_8dp"
                    android:paddingEnd="@dimen/padding_8dp"
                    android:paddingBottom="@dimen/padding_8dp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="Digital Book" />

                <!--Reward score-->
                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/layoutReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_marginEnd="@dimen/margin_8dp"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/viewCourseStatus"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="@dimen/margin_4dp"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:layout_marginEnd="@dimen/margin_4dp"
                        android:layout_marginBottom="@dimen/margin_4dp"
                        android:background="@drawable/circle_solid_primary_outlined" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/textViewRewardPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="@dimen/margin_4dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorGreyDark"
                        android:fontFamily="@font/poppins_regular"
                        tools:text="100" />

                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>

</layout>