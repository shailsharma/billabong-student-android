<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_nav_header_background"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:background="@drawable/gradient_app"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/value_16dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_UserProfile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/background_circle_white_stroke"
            android:elevation="4dp"
            android:padding="2dp" />

        <in.securelearning.lil.android.base.widget.TextViewCustom
            android:id="@+id/textview_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Username"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorWhite" />

        <in.securelearning.lil.android.base.widget.TextViewCustom
            android:id="@+id/textview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="user.name@android.com"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</layout>