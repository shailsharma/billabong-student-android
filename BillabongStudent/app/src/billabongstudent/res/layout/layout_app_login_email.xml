<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <!--Layout refreshToken-->
        <RelativeLayout
            android:id="@+id/containerLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Login tool bar-->
            <RelativeLayout
                android:id="@+id/layoutLoginToolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin_12dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <in.securelearning.lil.android.base.widget.CustomImageButton
                    android:id="@+id/buttonBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_12dp"
                    android:padding="@dimen/padding_8dp"
                    android:src="@drawable/back_gray"
                    android:visibility="gone"/>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Login"
                    android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:textColor="@color/colorGreyDark"
                    android:visibility="invisible"/>


            </RelativeLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageViewLoginLilLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/layoutLoginForm"
                android:layout_margin="@dimen/padding_36dp"
                app:srcCompat="@drawable/app_logo"/>

            <!--Login form-->
            <LinearLayout
                android:id="@+id/layoutLoginForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:orientation="vertical">

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_28dp"
                    android:layout_marginRight="@dimen/margin_28dp"
                    android:layout_marginBottom="@dimen/margin_28dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/textSize_20sp"
                    android:visibility="gone"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutLoginEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColorHint="@color/colorHint">

                    <AutoCompleteTextView
                        android:id="@+id/editTextLoginEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/label_email"
                        android:inputType="textWebEmailAddress"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/textSize_16sp"
                        android:theme="@style/themeEditTextGrey"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutLoginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorHint">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/editTextLoginPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/labelPassword"
                        android:inputType="textWebPassword"
                        android:maxLines="1"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/textSize_16sp"
                        android:theme="@style/themeEditTextGrey"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/buttonLoginForgetPassword"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/label_forgot_password"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textColor="@color/colorGreyDark"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/buttonLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:background="@drawable/gradient_chip"
                    android:text="Login"
                    android:layout_marginStart="@dimen/padding_48dp"
                    android:layout_marginEnd="@dimen/padding_48dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSize_16sp"/>

            </LinearLayout>

            <!--layout social login-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:id="@+id/imageButtonLoginFacebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_4dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#3b5998"
                    app:cardUseCompatPadding="true">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="@dimen/padding_4dp"
                        app:srcCompat="@drawable/logo_facebook"/>

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="Facebook"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSize_18sp"/>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/imageButtonLoginGooglePlus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_4dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#e02f2f"
                    app:cardUseCompatPadding="true">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="@dimen/padding_4dp"
                        app:srcCompat="@drawable/logo_google_plus"/>

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="Google +"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textSize_18sp"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!--layout sign up buttons-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New here? "
                    android:visibility="visible"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/buttonCreateAccount"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_4dp"
                    android:paddingRight="@dimen/padding_4dp"
                    android:text="Create an Account"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSize_18sp"/>

                <TextView
                    android:id="@+id/textViewAppVersion"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:visibility="gone"/>

            </LinearLayout>

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="196dp"
                android:layout_height="96dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_16dp"
                android:gravity="center_horizontal"
                app:srcCompat="@drawable/image_powered_by_lil"/>
        </RelativeLayout>


    </RelativeLayout>

</layout>