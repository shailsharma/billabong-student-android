<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/value_20dp"
                    android:layout_marginBottom="@dimen/value_8dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/performance"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorBlack"
                        android:visibility="gone" />

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/value_8dp"
                        android:layout_marginBottom="@dimen/value_8dp"
                        android:orientation="horizontal">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="230dp"
                            android:layout_marginTop="@dimen/value_16dp"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:padding="2dp"
                                android:text="@string/high" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="-20dp"
                                android:layout_marginEnd="-20dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:rotation="-90"
                                android:text="@string/excellence"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorBlack" />


                        </android.support.v7.widget.LinearLayoutCompat>

                        <!-- rectangle box -->
                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="256dp"
                            android:layout_height="256dp"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <!--brilliant, Catching-->
                            <android.support.v7.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:baselineAligned="false"
                                android:orientation="horizontal">

                                <!--brilliant-->
                                <android.support.v7.widget.LinearLayoutCompat
                                    android:id="@+id/ll_brilliant"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/color_brilliant"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/textViewBrilliant"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/background_circle_white"
                                        android:gravity="center"
                                        android:text="@string/zero"
                                        android:textColor="@color/color_brilliant"
                                        android:textStyle="bold" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center_horizontal"
                                        android:lines="2"
                                        android:text="@string/you_are_briliant"

                                        android:textColor="@color/white" />

                                </android.support.v7.widget.LinearLayoutCompat>

                                <Space
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent" />

                                <!--Catching-->
                                <android.support.v7.widget.LinearLayoutCompat
                                    android:id="@+id/ll_Catching"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@color/color_catching"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textViewCatching"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/background_circle_white"
                                        android:gravity="center"
                                        android:text="@string/zero"
                                        android:textColor="@color/color_catching"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/you_are_catching"
                                        android:textColor="@color/white" />

                                </android.support.v7.widget.LinearLayoutCompat>

                            </android.support.v7.widget.LinearLayoutCompat>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="1dp" />

                            <!--work_harder, studying-->
                            <android.support.v7.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <!--work_harder-->
                                <android.support.v7.widget.LinearLayoutCompat
                                    android:id="@+id/ll_work_harder"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@color/color_need_work_harder"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/textViewWorkHarder"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/background_circle_white"
                                        android:gravity="center"
                                        android:text="@string/zero"
                                        android:textColor="@color/color_need_work_harder"
                                        android:textStyle="bold" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/you_are_harder"
                                        android:textColor="@color/white" />

                                </android.support.v7.widget.LinearLayoutCompat>

                                <Space
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent" />

                                <!--studying-->
                                <android.support.v7.widget.LinearLayoutCompat
                                    android:id="@+id/ll_studying"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@color/color_studying"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <android.support.v7.widget.AppCompatTextView
                                        android:id="@+id/textViewStudying"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/background_circle_white"
                                        android:gravity="center"
                                        android:text="@string/zero"
                                        android:textColor="@color/color_studying"
                                        android:textStyle="bold" />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dividerHeight"
                                        android:gravity="center"
                                        android:text="@string/you_are_study"
                                        android:textColor="@color/white" />

                                </android.support.v7.widget.LinearLayoutCompat>

                            </android.support.v7.widget.LinearLayoutCompat>

                            <android.support.v7.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".3"
                                android:background="@color/white"
                                android:baselineAligned="false"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/value_2dp"
                                    android:text="@string/low" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:padding="@dimen/value_4dp"
                                    android:text="@string/efforts"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/colorBlack" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:padding="@dimen/value_2dp"
                                    android:text="@string/high" />

                            </android.support.v7.widget.LinearLayoutCompat>

                        </android.support.v7.widget.LinearLayoutCompat>

                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_4dp"
                        android:layout_marginBottom="@dimen/value_4dp"
                        android:orientation="vertical">

                        <!-- selected chart row-->
                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/llPerformance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorGrey11"
                            android:orientation="horizontal"
                            android:padding="@dimen/value_12dp"
                            android:visibility="gone">


                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/textViewPerformance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/value_8dp"
                                android:layout_weight="1.5"
                                android:gravity="start|center"
                                android:singleLine="true"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorBlack"
                                tools:text="Superstar" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/textViewCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center_horizontal|center_vertical"
                                android:layout_marginStart="@dimen/value_4dp"
                                android:layout_marginEnd="@dimen/value_16dp"
                                android:background="@drawable/background_circle_briliant"
                                android:gravity="center"
                                android:textColor="@color/white"
                                tools:text="4" />

                        </android.support.v7.widget.LinearLayoutCompat>

                        <!-- student list-->
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvSubject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_8dp"
                            android:layout_marginBottom="@dimen/value_8dp"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone">

                        </android.support.v7.widget.RecyclerView>

                    </android.support.v7.widget.LinearLayoutCompat>


                </android.support.v7.widget.LinearLayoutCompat>

                <ProgressBar
                    android:id="@+id/progressBarPerformance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="280dp"
                    android:layout_marginBottom="@dimen/value_16dp"
                    android:background="@drawable/background_circle_solid_white"
                    android:elevation="@dimen/elevation_8dp"
                    android:padding="@dimen/value_4dp"
                    android:visibility="gone" />

            </FrameLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</layout>