<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/value_16dp"
        app:cardCornerRadius="@dimen/value_8dp"
        app:cardElevation="@dimen/value_4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_curved"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="@dimen/value_16dp">

            <!--Title-->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:lines="2"
                android:textColor="@color/colorWhite"
                tools:text="Coordination in Plants" />

            <!--Description-->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_16dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:lines="3"
                android:maxLines="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                tools:text="An activity to reinforce the understanding of control and coordination mechanism in plants." />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_8dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textSize_16sp"
                    android:visibility="gone"
                    tools:text="VII" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:lines="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    tools:text="Science" />


            </android.support.v7.widget.LinearLayoutCompat>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>