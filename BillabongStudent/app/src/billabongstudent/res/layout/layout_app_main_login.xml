<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true">


        <include
            android:id="@+id/includeIntro"
            layout="@layout/layout_app_intro"/>

        <include
            android:id="@+id/includeLoginEmail"
            layout="@layout/layout_app_login_email"/>

        <include
            android:id="@+id/includeLoginPhone"
            layout="@layout/layout_app_login_phone"/>

        <include
            android:id="@+id/includeLoginProgress"
            layout="@layout/layout_app_login_progress"/>

    </RelativeLayout>
</layout>