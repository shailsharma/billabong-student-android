<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="20dip"/>
                    <gradient
                        android:startColor="#c1c1c1"
                        android:endColor="#e0e0e0"
                        android:gradientRadius="60dp"
                        android:type="radial"
                        />
                </shape>
            </item>
            <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="oval">
                    <size android:width="50dp"
                        android:height="50dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorOverdueAssignment" />
                    <solid android:color="@color/color2_foreground" />
                </shape>
            </item>


        </layer-list>
    </item>

</selector>
