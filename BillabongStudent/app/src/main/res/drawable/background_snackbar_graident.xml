<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First part is a gradient -->
    <item android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">

            <gradient android:angle="-90"  android:centerColor="@color/colorCenterGradient"
                      android:endColor="@color/colorEndGradient"
                      android:startColor="@color/colorStartGradient" />

        </shape>
    </item>
    <!-- Second part is plain color. Slightly transparent -->
    <item android:top="1sp" android:bottom="60sp" >
        <shape android:shape="rectangle">
            <solid android:color="#10ffffff"/>
        </shape>

    </item>
</layer-list>