<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutQuestionSelected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/colorBackground"
        android:visibility="gone">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_title"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutQuizTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false">

                    <in.securelearning.lil.android.base.widget.EditTextCustom
                        android:id="@+id/editTextQuizTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_quiz_title"
                        android:inputType="textFilter|textCapWords"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:textColor="@color/colorGreyDark"
                        android:textColorHint="@color/colorGrey66"
                        android:textSize="16sp"/>

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:text="@string/selected_questions"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <in.securelearning.lil.android.base.widget.CustomImageButton
                        android:id="@+id/buttonPreviewAllSelectedQuestions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="0dp"
                        android:src="@drawable/fullscreen_grey"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layoutSelectedQuestionPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:visibility="gone">

                        <in.securelearning.lil.android.base.widget.CheckBoxCustom
                            android:id="@+id/checkBoxSelectAllSelectedQuestions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="-7dp"/>

                        <in.securelearning.lil.android.base.widget.TextViewCustom
                            android:id="@+id/textviewSelectedQuestionCounter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/checkBoxSelectAllSelectedQuestions"
                            android:paddingLeft="4dp"
                            android:text="0"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="16sp"/>

                        <in.securelearning.lil.android.base.widget.TextViewCustom
                            android:id="@+id/textviewSelectedQuestionCounterDivider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/textviewSelectedQuestionCounter"
                            android:paddingLeft="2dp"
                            android:text="/"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="16sp"/>

                        <in.securelearning.lil.android.base.widget.TextViewCustom
                            android:id="@+id/textviewTotalSelectedQuestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/textviewSelectedQuestionCounterDivider"
                            android:paddingLeft="2dp"
                            android:text="0"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="16sp"/>


                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewSelectedQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollView"></android.support.v7.widget.RecyclerView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonSaveQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/action_done_w"
            app:backgroundTint="@color/colorPrimaryQuizCreator">

        </android.support.design.widget.FloatingActionButton>

    </RelativeLayout>

</layout>