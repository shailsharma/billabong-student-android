<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textView_period_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/english_color"
                android:padding="8dp"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"/>

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textView_period_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/textView_period_number"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Geography"
                android:textColor="@color/colorGreyDark"
                android:textSize="22sp"/>

        </RelativeLayout>

        <in.securelearning.lil.android.base.widget.TextViewCustom
            android:id="@+id/textView_period_topic"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/textViewPeriodName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="European Environmental Inequalities, Glacial landscapes and processes and happ"
            android:textColor="@color/english_color"
            android:textSize="16sp"/>


        <LinearLayout
            android:id="@+id/layout_period_teacher"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/textViewPeriodName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <in.securelearning.lil.android.base.widget.RoundedImageView
                android:id="@+id/imageView_period_teacher_pic"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/icon_profile_large"/>

            <in.securelearning.lil.android.base.widget.TextViewCustomLight
                android:id="@+id/textView_period_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="a,kfmnasdfma;slfmalsmf;lamslfa"
                android:textColor="@color/colorGrey77"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_period_student"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <in.securelearning.lil.android.base.widget.TextViewCustomLight
                android:id="@+id/textView_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="aslfdmalsmflamsfas"
                android:textColor="@color/colorGrey77"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
