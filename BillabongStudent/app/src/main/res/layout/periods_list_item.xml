<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_strip_activity"
        android:orientation="horizontal"
        android:paddingLeft="8dp">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp">


            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textView_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Science"
                android:textColor="@color/colorGreyDark"
                android:textStyle="bold" />


            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textView_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_subject"
                android:layout_marginTop="4dp"
                android:text="topic" />

        </RelativeLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="8dp">

            <in.securelearning.lil.android.base.widget.TextViewCustom

                android:id="@+id/textView_period_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00" />


            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=" - " />

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textView_period_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:00" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

