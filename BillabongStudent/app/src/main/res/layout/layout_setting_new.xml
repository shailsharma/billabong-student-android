<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#ffffff"
                  android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <in.securelearning.lil.android.base.widget.CustomImageButton
                android:id="@+id/imagebutton_back"
                style="@style/Base.Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:padding="8dp"
                android:src="@drawable/back_white"/>

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/imagebutton_back"
                android:text="Settings"
                android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textColor="@color/colorWhite"/>

            <in.securelearning.lil.android.base.widget.CustomImageButton
                android:id="@+id/imagebutton_update"
                style="@style/Base.Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/select_white"
                android:visibility="gone"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layoutDoenload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/setting_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@+id/setting_download_wifi_img"
                        android:text="@string/setting_download"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@id/setting_download_wifi_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting_download"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_wifi_black_24dp"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/setting_download_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignStart="@id/setting_download"
                        android:layout_below="@id/setting_download"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/setting_download_wifi"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/setting_download_mdata_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting_download_wifi_img"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_perm_device_information_black_24dp"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/setting_download_mdata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignStart="@id/setting_download"
                        android:layout_below="@id/setting_download_wifi_img"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/setting_download_mdata"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="18sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_alignLeft="@+id/setting_download_mdata"
                        android:layout_below="@+id/setting_download_mdata"
                        android:background="@color/itemDivider"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_storage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/setting_storage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@+id/setting_delete_img"
                        android:text="@string/setting_storage"
                        android:textColor="#ff4000"
                        android:textSize="16sp"/>


                    <ImageView
                        android:id="@id/setting_delete_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting_storage"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_delete_black_24dp"/>

                    <TextView
                        android:id="@+id/setting_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/setting_storage"
                        android:layout_below="@id/setting_storage"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/setting_storage_delete"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="16sp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/setting_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@+id/setting_account_cpassword_img"
                        android:text="@string/setting_account"
                        android:textColor="#ff4000"
                        android:textSize="16sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/setting_account"
                        android:layout_toEndOf="@+id/setting_account_cpassword_img"
                        android:background="@color/itemDivider"/>

                    <ImageView
                        android:id="@id/setting_account_cpassword_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting_account"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_vpn_key_black_24dp"/>

                    <TextView
                        android:id="@+id/setting_account_cpassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/setting_account"
                        android:layout_below="@id/setting_account"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/setting_account_cpassword"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="18sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/setting_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@+id/setting_notification_viberate_img"
                        android:text="@string/setting_notification"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@id/setting_notification_viberate_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting_notification"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_vibration_black_24dp"/>

                    <TextView
                        android:id="@+id/setting_notification_viberate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/setting_notification"
                        android:layout_below="@id/setting_notification"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/setting_notification_viberate"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="18sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_alignLeft="@+id/setting_notification_viberate"
                        android:layout_below="@+id/setting_notification_viberate"
                        android:background="@color/itemDivider"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/setting_general_language_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_language_black_24dp"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/setting_general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@id/setting_general_language_img1"
                        android:text="@string/setting_general"
                        android:textSize="16sp"/>

                    <RelativeLayout
                        android:id="@+id/layout_setting_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting_general"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/setting_general_language_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_language_black_24dp"/>

                        <TextView
                            android:id="@+id/setting_general_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_toEndOf="@id/setting_general_language_img"
                            android:text="@string/setting_general_language"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="18sp"/>

                        <Spinner
                            android:id="@+id/setting_language_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_margin="10dp"
                            android:gravity="end"/>

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/layout_setting_help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_setting_language"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/setting_general_help_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_contact_mail_black_24dp"/>

                        <TextView
                            android:id="@+id/setting_general_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/setting_general_help"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="18sp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_setting_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_setting_help"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/setting_general_share_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_share_black_24dp"/>

                        <TextView
                            android:id="@+id/setting_general_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/setting_general_share"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="18sp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_setting_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_setting_share"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/setting_general_about_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_supervisor_account_black_24dp"/>

                        <TextView
                            android:id="@+id/setting_general_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/setting_general_about"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="18sp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_setting_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_setting_about"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/setting_general_rate_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_plus_one_black_24dp"/>

                        <TextView
                            android:id="@+id/setting_general_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/setting_general_rate"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="18sp"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/setting_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:text="@string/setting_version"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="14sp"/>

                    <Button
                        android:id="@+id/btn_setting_logout"
                        style="?android:textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/setting_version"
                        android:layout_alignStart="@+id/setting_version"
                        android:layout_below="@id/setting_version"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:text="@string/btn_setting_logout"
                        android:theme="@style/ButtonColorAccent"
                        android:textSize="16sp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>