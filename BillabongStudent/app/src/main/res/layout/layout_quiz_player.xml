<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_app"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:visibility="visible">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:fitsSystemWindows="true"
                app:elevation="0dp">


                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal">

                    <!--back/close-->
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:padding="@dimen/padding_12dp"
                        app:srcCompat="@drawable/action_close_w" />

                    <!--title-->
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/textViewToolbarTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                        android:textColor="@color/colorWhite"
                        tools:text="I just want have a half of screen with 1 linearLayout and half screen with other" />

                    <!--Streak, point, coin-->
                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:layout_marginEnd="@dimen/margin_8dp"
                        android:orientation="horizontal">

                        <!--Streak-->
                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/layoutStreak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.robinhood.ticker.TickerView
                                android:id="@+id/textViewStreak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/imageViewStreak"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/icon_streak" />

                        </android.support.v7.widget.LinearLayoutCompat>

                        <!--point, coin-->
                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/layoutPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/chip_accent_color"
                            android:orientation="horizontal">

                            <com.robinhood.ticker.TickerView
                                android:id="@+id/textViewPoint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|end"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="@color/colorWhite"
                                android:visibility="visible"
                                tools:text=" 150 " />

                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/imageViewCoin"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/icon_euro_coin" />

                        </android.support.v7.widget.LinearLayoutCompat>

                    </android.support.v7.widget.LinearLayoutCompat>


                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:id="@+id/layoutTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_bar"
                android:visibility="visible">

                <!--Question Counter, Size-->
                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/layoutQuestionCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:id="@+id/textViewQuestionCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorWhite"
                        tools:text="@string/question" />

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:id="@+id/textViewQuestionsSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        tools:text=" 1" />

                </android.support.v7.widget.LinearLayoutCompat>

                <!--Timer-->
                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/layoutTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/background_transparent_white"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="2dp"
                        android:text="&#xea19;"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorGreyDark"
                        android:visibility="gone" />

                    <Chronometer
                        android:id="@+id/chronometerQuestionTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorGreyDark" />

                </android.support.v7.widget.LinearLayoutCompat>

                <!--Question Hints-->
                <!--hint-->
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textQuestionHints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="56dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff"
                    android:visibility="gone"
                    tools:text="2/4" />

                <!--Button-->
                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/buttonQuestionHints"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_hint_bulb"
                    android:visibility="gone" />

                <!--Question Type-->
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewQuestionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutQuestionCounter"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:alpha="0.8"
                    android:textColor="@color/colorWhite"
                    android:visibility="visible"
                    tools:text="@string/single_correct" />


            </RelativeLayout>

            <!--Response-->
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/layoutResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageViewResponse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textViewResponse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingRight="12dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/buttonDone"
                android:layout_below="@+id/layoutTop"
                android:requiresFadingEdge="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_8dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/textViewQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorWhite"
                        android:textColorLink="@color/colorWhite" />

                    <!--resources-->
                    <android.support.v7.widget.CardView
                        android:id="@+id/layoutQuestionResource"
                        android:layout_width="196dp"
                        android:layout_height="148dp"
                        android:visibility="gone"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="@dimen/elevation_4dp"
                        app:cardUseCompatPadding="true">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/imageViewResourceThumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/imageViewResourceType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|left"
                            android:layout_margin="4dp"
                            android:padding="4dp"
                            app:srcCompat="@drawable/icon_image_white" />


                    </android.support.v7.widget.CardView>

                    <!--choices-->
                    <!--<android.support.v7.widget.CardView-->
                    <!--android:id="@+id/cardViewChoices"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="12dp"-->
                    <!--android:visibility="gone"-->
                    <!--app:cardCornerRadius="2dp"-->
                    <!--app:cardElevation="4dp"-->
                    <!--app:cardUseCompatPadding="true"-->

                    <!--&gt;-->

                    <LinearLayout
                        android:id="@+id/layoutChoices"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:orientation="vertical"
                        android:visibility="gone">


                    </LinearLayout>


                    <include
                        android:id="@+id/layout_match_the_following_container"
                        layout="@layout/layout_match_the_following_container" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />


                    <!--hints-->
                    <FrameLayout
                        android:id="@+id/cardViewHints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/background_choice_unselected"
                        android:visibility="gone"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <in.securelearning.lil.android.base.widget.TextViewCustom
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:background="@drawable/chip_accent_color"
                                android:paddingLeft="@dimen/padding_8dp"
                                android:paddingRight="@dimen/padding_8dp"
                                android:text="@string/label_hints"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white" />

                            <LinearLayout
                                android:id="@+id/layoutHints"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="@drawable/separator"
                                android:orientation="vertical"
                                android:showDividers="middle">

                            </LinearLayout>

                        </LinearLayout>


                    </FrameLayout>

                    <!--explanation-->
                    <FrameLayout
                        android:id="@+id/layoutExplanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/background_choice_unselected"
                        android:padding="8dp"
                        android:visibility="gone"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <in.securelearning.lil.android.base.widget.TextViewCustom
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_marginBottom="@dimen/margin_2dp"
                                android:background="@drawable/chip_accent_color"
                                android:paddingLeft="@dimen/padding_8dp"
                                android:paddingRight="@dimen/padding_8dp"
                                android:text="@string/heading_explanation_text"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/textViewExplanationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/white"
                                android:textColorLink="@color/colorWhite"
                                android:visibility="gone" />

                            <android.support.v7.widget.CardView
                                android:id="@+id/layoutExplanationResource"
                                android:layout_width="196dp"
                                android:layout_height="148dp"
                                android:visibility="gone"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="4dp"
                                app:cardUseCompatPadding="true">

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/imageViewExplanationThumbnail"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/imageViewExplanationType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|left"
                                    android:layout_margin="4dp"
                                    android:padding="4dp" />

                            </android.support.v7.widget.CardView>


                        </android.support.v7.widget.LinearLayoutCompat>

                    </FrameLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <Button
                android:id="@+id/buttonDone"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/margin_16dp"
                android:background="@drawable/chip_accent_color"
                android:padding="@dimen/padding_8dp"
                android:text="@string/submit"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:visibility="gone" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewAddedPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/chip_accent_color"
                android:drawableEnd="@drawable/icon_euro_coin"
                android:drawablePadding="@dimen/padding_8dp"
                android:paddingStart="@dimen/padding_8dp"
                android:paddingEnd="@dimen/padding_8dp"
                android:text="+20"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize_36sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:fontFamily="@font/digital" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableEnd="@drawable/icon_streak"
                android:drawablePadding="@dimen/padding_8dp"
                android:paddingStart="@dimen/padding_8dp"
                android:paddingEnd="@dimen/padding_8dp"
                android:text="x3"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize_48sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>


        <!--Question Response-->
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/layoutQuestionResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_app"
            android:fadingEdge="vertical"
            android:orientation="vertical"
            android:padding="@dimen/padding_16dp"
            android:visibility="gone">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewQuestionResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorWhite"
                android:textSize="28dp"
                android:textStyle="bold"
                tools:ignore="SpUsage"
                tools:text="@string/question_response_wrong" />

        </android.support.v7.widget.LinearLayoutCompat>


    </RelativeLayout>

</layout>