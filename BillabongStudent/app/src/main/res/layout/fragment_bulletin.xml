<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackground">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewBulletin"
            android:layout_width="match_parent"
            android:animationCache="true"
            android:alwaysDrawnWithCache="true"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/layoutNoBulletin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/logo_notification_c"/>

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_no_notification"
                android:textSize="20sp"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarBulletin"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"></ProgressBar>

    </RelativeLayout>
</layout>