<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryQuizCreator"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>

        <!--layout question selection from skill-->
        <RelativeLayout
            android:id="@+id/layoutQuestionSelection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:visibility="visible"
            android:descendantFocusability="blocksDescendants"
            >

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <!--layout quiz meta data fields -->
                    <include
                        android:id="@+id/includeMetaData"
                        layout="@layout/layout_quiz_assembler_metadata_fields"
                        />

                    <LinearLayout
                        android:id="@+id/layoutQuestionList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <in.securelearning.lil.android.base.widget.TextViewCustom
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingTop="8dp"
                            android:text="@string/questions"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp">

                            <in.securelearning.lil.android.base.widget.CheckBoxCustom
                                android:id="@+id/checkBoxSelectAllQuestions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:button="@null"
                                android:drawableLeft="@drawable/selector_custom_radio_button"/>

                            <in.securelearning.lil.android.base.widget.TextViewCustom
                                android:id="@+id/textviewQuestionCounter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/checkBoxSelectAllQuestions"
                                android:paddingLeft="4dp"
                                android:text="0"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="16sp"/>

                            <in.securelearning.lil.android.base.widget.TextViewCustom
                                android:id="@+id/textviewQuestionCounterDivider"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/textviewQuestionCounter"
                                android:paddingLeft="2dp"
                                android:text="/"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="16sp"/>

                            <in.securelearning.lil.android.base.widget.TextViewCustom
                                android:id="@+id/textviewTotalQuestion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/textviewQuestionCounterDivider"
                                android:paddingLeft="2dp"
                                android:text="0"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="16sp"/>

                            <in.securelearning.lil.android.base.widget.CustomImageButton
                                android:id="@+id/buttonPreviewAllQuestions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="0dp"
                                android:src="@drawable/fullscreen_grey"/>


                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerViewSkillQuestions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                        <ProgressBar
                            android:id="@+id/progressBarBottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:visibility="gone"
                            ></ProgressBar>

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/buttonLoadMore"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="4dp"
                            android:text="@string/labelMore"
                            android:textColor="@color/colorPrimary"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ProgressBar
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            ></ProgressBar>

                        <in.securelearning.lil.android.base.widget.TextViewCustom
                            android:id="@+id/textViewProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Fetching questions\nPlease wait..."
                            android:textSize="18sp"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/buttonActionExportQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/fab_margin"
                android:scaleType="center"
                android:src="@drawable/action_add_to_list_w"
                android:visibility="gone"
                app:backgroundTint="@color/colorPrimaryQuizCreator">

            </android.support.design.widget.FloatingActionButton>

        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerQuestionPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@color/colorBackground"
            android:visibility="gone">

        </android.support.v4.view.ViewPager>

        <include
            android:id="@+id/includeSelectedQuestion"
            layout="@layout/layout_quiz_assembler_selected_question"/>

    </RelativeLayout>
</layout>