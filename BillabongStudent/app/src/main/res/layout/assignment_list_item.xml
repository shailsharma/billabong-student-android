<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:background="@color/itemDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewSubjectColor"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:background="@color/itemDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/imageview_assignment_status"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Navigate student to assignment detail activity when click from dashboard assignments, not to assignments list."
                    android:textSize="18sp"
                    android:textColor="@color/colorGreyDark"
                     />

                <ImageView
                    android:id="@+id/imageview_assignment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/clock_green" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp">

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textView_due_on_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Due on "
                    android:textSize="16sp"
                    android:textColor="@color/colorGrey77" />

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textView_due_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textView_due_on_label"
                    android:text="sdfsdfsdf"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGrey77"/>

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textView_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Type"
                    android:textSize="16sp"
                    android:textColor="@color/purple_color" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>


