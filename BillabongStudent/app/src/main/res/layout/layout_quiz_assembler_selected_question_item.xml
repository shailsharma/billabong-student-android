<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <in.securelearning.lil.android.base.widget.TextViewCustom
            android:id="@+id/textViewQuestionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/checkbox_circle_u"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/colorGreyDark"
            android:textSize="15sp" />

        <in.securelearning.lil.android.base.widget.TextViewCustom
            android:id="@+id/textViewQuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/buttonRemoveQuestion"
            android:layout_toRightOf="@+id/textViewQuestionNumber"
            android:ellipsize="end"
            android:padding="8dp"
            android:textColor="@color/colorGreyDark"
            android:textSize="16sp" />

        <in.securelearning.lil.android.base.widget.CustomImageButton
            android:id="@+id/buttonRemoveQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:src="@drawable/remove_red" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@+id/textViewQuestionTitle"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/textViewQuestionNumber"
            android:background="@color/itemDivider" />

    </RelativeLayout>
</layout>