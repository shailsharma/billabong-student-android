                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:id="@+id/scrollview_blog_resources"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="5dp"></HorizontalScrollView>

            <android.support.v7.widget.CardView
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="3dp">

                <RelativeLayout

                    android:id="@+id/layout_about_blogger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/imageview_blogger"
                        android:orientation="vertical">

                        <in.securelearning.lil.android.base.widget.TextViewCustom
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About the blogger"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <in.securelearning.lil.android.base.widget.RoundedImageView
                        android:id="@+id/imageview_blogger"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/user_thumbnail"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <in.securelearning.lil.android.base.widget.TextViewCustom
                        android:id="@+id/textview_comment_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:text="Comments"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="14sp" />


                    <in.securelearning.lil.android.base.widget.RoundedImageView
                        android:id="@+id/imageview_user_comment"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/textview_comment_lable"
                        android:layout_margin="5dp"
                        android:src="@drawable/user_thumbnail" />

                    <in.securelearning.lil.android.base.widget.EditTextCustom
                        android:id="@+id/edittext_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview_comment_lable"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/imageview_user_comment"
                        android:hint="Write your comment..."
                        android:textColorHint="@color/colorHint"
                        android:textSize="14sp" />


                    <in.securelearning.lil.android.base.widget.ButtonCustom
                        android:id="@+id/postButton"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/edittext_comment"
                        android:layout_below="@+id/edittext_comment"
                        android:background="@color/colorRed"
                        android:text="Post"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
