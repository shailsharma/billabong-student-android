<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textview_blog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_black_category"
                android:padding="5dp"
                android:text="Blog Title"
                android:textColor="@color/colorWhite"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrey"
                android:padding="5dp">

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textview_blog_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:text="Posted on Dec 2,2016"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="14sp" />

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textview_blogger_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/textview_blog_time"
                    android:text="by Priya Jain"
                    android:textColor="@color/colorGreen"
                    android:textSize="14sp" />

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textview_comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_blog_time"
                    android:layout_margin="5dp"
                    android:text="(0 Comments)"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="14sp" />

                <RatingBar
                    android:id="@+id/rating_bar_blog"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:max="5"
                    android:rating="4" />

            </RelativeLayout>

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textview_blog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="The rocky ball that forms our world is one of nine planets in the Solar System. Earth is a sphere, with a slight bulge in the middle at the Equator, and a diameter of 12,756 km (7,926 miles). It hurtles at speeds of 105,000 kph (65,000 mph) during its orbit around the Sun, turning on its AXIS once every 24 hours. This journey takes a year to complete. The Earth is the only planet that is known to support life, in a zone called the BIOSPHERE.

