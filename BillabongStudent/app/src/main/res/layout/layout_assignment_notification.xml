<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/notification_icon"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/layoutOverDueAssignments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <in.securelearning.lil.android.base.widget.TextViewCustom
                style="@android:style/TextAppearance.StatusBar.EventContent.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignments Over due"
                android:textColor="@color/colorGreyDark"/>

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textViewOverDueTitle"
                style="@android:style/TextAppearance.StatusBar.EventContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Earth\nFabric\nQuiz Nano"
                android:textColor="@color/colorGrey88"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDueAssignments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <in.securelearning.lil.android.base.widget.TextViewCustom
                style="@android:style/TextAppearance.StatusBar.EventContent.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignments due"
                android:textColor="@color/colorGreyDark"/>

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textViewDueTitle"
                style="@android:style/TextAppearance.StatusBar.EventContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Earth\nFabric\nQuiz Nano"
                android:textColor="@color/colorGrey88"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDueTomorrowAssignments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <in.securelearning.lil.android.base.widget.TextViewCustom
                style="@android:style/TextAppearance.StatusBar.EventContent.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignments Due Tomorrow"
                android:textColor="@color/colorGreyDark"/>

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textViewDueTomorrowTitle"
                style="@android:style/TextAppearance.StatusBar.EventContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Earth\nFabric\nQuiz Nano"
                android:textColor="@color/colorGrey88"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
