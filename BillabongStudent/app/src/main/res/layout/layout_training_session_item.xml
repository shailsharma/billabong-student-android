<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="8dp"
                  android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_weight="1"
                android:textStyle="bold"
        />

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:visibility="visible"
                android:gravity="left"
                android:textStyle="bold"
                />

        </LinearLayout>



        <in.securelearning.lil.android.base.widget.TextViewCustom
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorGreyDark"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />


        <in.securelearning.lil.android.base.widget.TextViewCustom
            android:id="@+id/textViewTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:visibility="gone"
            />



        <LinearLayout
            android:id="@+id/layoutViewMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!--TopicCovered-->
            <LinearLayout
                android:id="@+id/layoutTopicCovered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textViewTopicCovered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/labelTopicCovered"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorGreyDark"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewTopicCovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <!--goal-->
            <LinearLayout
                android:id="@+id/layoutGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:visibility="gone"/>

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textViewGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <include
                    android:id="@+id/includeTextViewMoreLessGoal"
                    layout="@layout/layout_view_more_less"/>

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonViewMore"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="View more"
            android:textColor="@color/colorAccent"
            android:visibility="gone"/>

        <!-- StudyReferences-->
        <LinearLayout
            android:id="@+id/layoutStudyReferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textViewStudyReferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/labelStudyReferences"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorGreyDark"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewStudyReferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="8dp"
            android:background="@color/itemDivider"></View>

    </LinearLayout>
</layout>