<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutParentQuestionFetch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <in.securelearning.lil.android.base.widget.TextViewCustom
            android:id="@+id/textViewWizardSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="VI ➪ Science ➪ Food ➪ How food supply chain works ?"
            android:textColor="@color/colorGreyDark"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/layoutQuestionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp">

                <in.securelearning.lil.android.base.widget.CheckBoxCustom
                    android:id="@+id/checkBoxSelectAllQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_custom_radio_button"/>

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textviewQuestionCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/checkBoxSelectAllQuestions"
                    android:paddingLeft="4dp"
                    android:text="0"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="16sp"/>

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textviewQuestionCounterDivider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textviewQuestionCounter"
                    android:paddingLeft="2dp"
                    android:text="/"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="16sp"/>

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textviewTotalQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textviewQuestionCounterDivider"
                    android:paddingLeft="2dp"
                    android:text="0"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="16sp"/>

                <in.securelearning.lil.android.base.widget.CustomImageButton
                    android:id="@+id/buttonPreviewAllQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="0dp"
                    android:src="@drawable/fullscreen_grey"/>


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewSkillQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <ProgressBar
                android:id="@+id/progressBarBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                ></ProgressBar>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutQuestionFetchProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                ></ProgressBar>

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textViewProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Fetching questions\nPlease wait..."
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

</layout>