<?xml version="1.0" encoding="utf-8"?>
<in.securelearning.lil.android.base.widget.SqaureRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                                xmlns:card_view="http://schemas.android.com/tools"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="match_parent"
                                                                android:layout_margin="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageview_resource"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/imageViewFileType"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                android:background="@drawable/image_black_transparent"
                android:padding="6dp"
                android:src="@drawable/icon_image_white"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</in.securelearning.lil.android.base.widget.SqaureRelativeLayout>
