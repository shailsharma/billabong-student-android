<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/radio_button_mcq_single_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <in.securelearning.lil.android.base.widget.EditTextCustom
        android:id="@+id/edit_text_mcq_single_correct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@null"
        android:hint="Enter choice"
        android:inputType="textFilter|textCapSentences"
        android:textColorHint="@color/colorGrey400"
        android:textSize="17sp" />

    <in.securelearning.lil.android.base.widget.CustomImageButton
        android:id="@+id/single_correct_choice_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:src="@drawable/remove" />
</LinearLayout>