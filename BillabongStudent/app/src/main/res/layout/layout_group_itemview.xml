<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textview_group_name"
            android:layout_margin="4dp"
            app:cardBackgroundColor="@color/backgroundColorLN"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imageview_group_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_audience_large"/>

        </android.support.v7.widget.CardView>

        <in.securelearning.lil.android.base.widget.TextViewCustom
            android:id="@+id/textview_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorGreyDark"
            android:textSize="16sp"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>





