<layout >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        cardCornerRadius="2dp"
        contentPadding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/topicName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="4dp"
                    android:layout_alignParentStart="true"
                    android:text="Topic Name"
                    android:textSize="18sp"
                    android:layout_toLeftOf="@+id/txt_view_all"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorBlack"
                    android:textStyle="normal"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txt_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_alignParentRight="true"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:text="View All"
                    android:background="@color/colorBlue"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/horizontalSkillList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alwaysDrawnWithCache="true"
                android:animationCache="true"
                android:drawingCacheQuality="high"
                android:padding="4dp">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/txt_no_topic_course_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:text="No Course data vailable for this topic"
                android:visibility="gone"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
