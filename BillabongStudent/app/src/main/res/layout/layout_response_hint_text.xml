<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <in.securelearning.lil.android.base.widget.TextViewCustom
        android:id="@+id/text_view_hint_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingRight="8dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorGreyDark"
        />

    <in.securelearning.lil.android.base.widget.TextViewCustom
        android:id="@+id/view"
        android:layout_width="0.7dp"
        android:layout_height="match_parent"
        android:background="@drawable/separator"></in.securelearning.lil.android.base.widget.TextViewCustom>

    <in.securelearning.lil.android.base.widget.TextViewCustom
        android:id="@+id/text_view_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorGrey77"/>

</LinearLayout>