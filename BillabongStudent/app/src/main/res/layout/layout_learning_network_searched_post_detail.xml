<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">

        <!--layout header-->
        <RelativeLayout
            android:id="@+id/layoutToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/colorLearningNetworkPrimary"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <in.securelearning.lil.android.base.widget.CustomImageButton
                    android:id="@+id/buttonBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:src="@drawable/back_white" />

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textviewToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:ellipsize="end"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="dfdsfsdf"
                    android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

        </RelativeLayout>

        <!--layout main content-->
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollViewMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_bottom"
            android:layout_below="@+id/layoutToolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <!--layout contain user image, username, post time, post type and badge button-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp">

                                <ImageView
                                    android:id="@+id/imageView_user_thumbnail"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/icon_profile_large" />

                            </LinearLayout>

                            <!--layout contain username, post time, post type and badge button-->
                            <RelativeLayout
                                android:id="@+id/relativeLayout1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_toRightOf="@+id/imageView"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_toLeftOf="@+id/layoutRight"
                                    android:orientation="vertical">

                                    <in.securelearning.lil.android.base.widget.TextViewCustom
                                        android:id="@+id/textView_user_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textColor="@color/colorGreyDark"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <in.securelearning.lil.android.base.widget.TextViewCustom
                                        android:id="@+id/textView_post_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:textColor="@color/colorGreyLight"
                                        android:textStyle="italic" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layoutRight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="5dp"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView_badge"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:scaleType="centerCrop"
                                        android:visibility="gone" />


                                    <ImageButton
                                        android:id="@+id/imageBtn_post_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:background="@null" />

                                    <in.securelearning.lil.android.base.widget.CustomImageButton
                                        android:id="@+id/button_badge_popup"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="8dp"
                                        android:src="@drawable/post_menu" />

                                </LinearLayout>


                            </RelativeLayout>

                        </LinearLayout>

                        <!--layout contains posted image, video ,text and og card views-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <!--Layout posted image-->
                            <RelativeLayout
                                android:id="@+id/posted_resources_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/imageView_posted"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:scaleType="centerCrop" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient_black"></View>

                                <ImageView
                                    android:id="@+id/imageViewFileType"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_margin="4dp"
                                    android:padding="4dp"
                                    android:src="@drawable/icon_image_white" />

                                <RelativeLayout
                                    android:id="@+id/button_multiple_resources"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/image_black_transparent"
                                    android:clickable="true">

                                    <in.securelearning.lil.android.base.widget.CustomImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:clickable="false"
                                        android:focusableInTouchMode="false"
                                        android:padding="8dp"
                                        android:src="@drawable/gallery" />

                                </RelativeLayout>


                            </RelativeLayout>

                            <!--layout og card-->
                            <include
                                android:id="@+id/includeOG"
                                layout="@layout/layout_og_card_for_mobile"></include>

                            <!--posted text view-->
                            <in.securelearning.lil.android.base.widget.TextViewCustom
                                android:id="@+id/textView_posted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textColor="@color/colorGreyDark"
                                android:textSize="16sp" />

                            <include
                                android:id="@+id/includeViewMore"
                                layout="@layout/layout_view_more_less" />

                        </LinearLayout>

                        <!--layout contains like, comment, favorite buttons and comment recycler view-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/itemDivider" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <include
                                    android:id="@+id/includeResponseClicks"
                                    layout="@layout/layout_post_like_comments_fav"></include>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/layoutCommentsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"></android.support.v7.widget.RecyclerView>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <!--layout bottom for comment-->
        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/itemDivider"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <in.securelearning.lil.android.base.widget.EditTextCustom
                    android:id="@+id/editText_write_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".85"
                    android:background="@null"
                    android:hint="Write your comment"
                    android:maxLines="3"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:textColorHint="@color/colorHint" />

                <in.securelearning.lil.android.base.widget.CustomImageButton
                    android:id="@+id/button_post_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:src="@drawable/selector_post_button" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>





