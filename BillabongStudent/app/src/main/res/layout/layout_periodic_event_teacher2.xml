<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="2dp"
            app:cardElevation="4dp">

            <!--layout period-->
            <LinearLayout
                android:id="@+id/layoutPeriod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/textViewPeriodSubject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:fontFamily="sans-serif-smallcaps"
                                android:paddingBottom="4dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="4dp"
                                android:text="Art History and Museology (International Master’s Degree) (M.A.)"
                                android:textColor="#ffaa02"
                                android:textStyle="bold"/>

                            <!--qqqqq  and Museology (International Master’s Degree) (M.A.)-->

                        </FrameLayout>

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:cardCornerRadius="4dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/textViewPeriodStartTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="#011"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:paddingBottom="8dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="8dp"
                                    android:text="9:30 AM"
                                    android:textColor="#fff"
                                    android:textStyle="bold"/>


                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/textViewPeriodEndTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="#007"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:paddingBottom="8dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="8dp"
                                    android:text="10:30 AM"
                                    android:textColor="#fff"
                                    android:textStyle="bold"/>

                                <!--qqqqq  and Museology (International Master’s Degree) (M.A.)-->

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/imageViewPeriodTeacherPic"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/john_sample"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewClass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="VIII"
                            android:textSize="28sp"
                            android:textStyle="bold"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewClassSection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="A"
                            android:textSize="28sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/textViewPeriodTopic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:text="The Fundamentals of Fluids Along with Viscosity and Reverse Viscous Pressure"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#222"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewPeriodSubTopic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:text="This is a sub topic so yo can do whatever"
                            android:textColor="#444"/>


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewPeriodLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Room No. 108"
                            android:textColor="#444"
                            android:visibility="gone"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <!--layout break-->
            <LinearLayout
                android:id="@+id/layoutBreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <in.securelearning.lil.android.base.widget.TextViewCustom
                    android:id="@+id/textViewBreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Jalpan"
                    android:textColor="#222"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="#011"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:paddingBottom="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="8dp"
                            android:text="9:30 AM"
                            android:textColor="#fff"
                            android:textStyle="bold"/>


                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="#007"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:paddingBottom="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="8dp"
                            android:text="10:30 AM"
                            android:textColor="#fff"
                            android:textStyle="bold"/>

                        <!--qqqqq  and Museology (International Master’s Degree) (M.A.)-->

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
</layout>