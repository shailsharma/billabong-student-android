<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <in.securelearning.lil.android.base.widget.TextViewCustom
        android:id="@+id/text_view_hint_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/colorGreyDark"
        android:textSize="@dimen/assignment_phone_ContentText" />

    <in.securelearning.lil.android.base.widget.TextViewCustom
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@drawable/separator"></in.securelearning.lil.android.base.widget.TextViewCustom>

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imageview_hint_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_grey" />


        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:src="@drawable/icon_video_white" />

    </RelativeLayout>

</LinearLayout>
