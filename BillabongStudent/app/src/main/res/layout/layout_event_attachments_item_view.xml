<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardMain"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_attach"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>


            <RelativeLayout
                android:id="@+id/layout_button_remove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_black_top"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/imageView_remove_attachment"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:src="@drawable/icon_cross_white"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gradient_black_bottom"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/imageViewFileType"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:src="@drawable/icon_image_white"/>

            </RelativeLayout>

            <in.securelearning.lil.android.base.widget.TextViewCustomLight
                android:id="@+id/textViewFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:maxLines="2"
                android:padding="4dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:visibility="gone"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</layout>