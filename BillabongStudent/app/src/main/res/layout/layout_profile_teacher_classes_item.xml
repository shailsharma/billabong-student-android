<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCuratorMapping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:contentPadding="4dp"
        app:cardCornerRadius="4dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textViewGradeSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp"
                android:text="VII A"
                android:textAllCaps="true"
                android:textColor="@color/mathematics_color"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <in.securelearning.lil.android.base.widget.TextViewCustom
                android:id="@+id/textViewSubjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:padding="8dp"
                android:textAllCaps="true"
                android:textColor="@color/colorGreyDark"
                android:textSize="12sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
